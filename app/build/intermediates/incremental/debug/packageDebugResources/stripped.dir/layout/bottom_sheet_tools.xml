<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Tools"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Search -->
    <EditText
        android:id="@+id/edtSearchTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search tasks"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Sorting options -->
    <TextView
        android:id="@+id/sortDefault"
        android:text="Sort: Default order"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sortHighLow"
        android:text="Sort: Priority HIGH â†’ LOW"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sortDueSoon"
        android:text="Sort: Due date (soonest first)"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sortDueLatest"
        android:text="Sort: Due date (latest first)"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
